<Window x:Class="Kal2.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kal2"
        mc:Ignorable="d"
        Title="Авторизация" 
        MinHeight="600" MaxHeight="600" MinWidth="500"  MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Margin="70,20,200,0"
                   FontSize="14"> Логин </Label>
            <TextBox x:Name="LoginTextBox"
                     Height="30"
                     FontSize="17"
                     Padding="5,2,0,0"
                     Width="350"></TextBox>
            <Label Margin="70,20,200,0"
                   FontSize="14">Пароль</Label>
            <PasswordBox x:Name="PasswordTextBox" 
                         Height="30"
                         FontSize="17"
                         Padding="5,2,0,0"
                         Width="350"/>
            <Button Height="40"
                    Width="250"
                    Margin="0,40" Content="Войти" FontSize="20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
 